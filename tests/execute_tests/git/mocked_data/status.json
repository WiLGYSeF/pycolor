{
	"profiles": [
		{
			"name": "git",
			"arg_patterns": [
				{
					"subcommand": "status"
				}
			],
			"from_profiles": [ "git_status" ]
		},
		{
			"profile_name": "git_status",
			"patterns": [
				{
					"expression": "^On branch (.*)$",
					"replace_groups": ["%C(bol;c)%Gc%Cz"]
				},
				{
					"activation_expression": "^Changes to be committed:$",
					"deactivation_expression": "^\\s*$",
					"expression": [
						"^\\s+(?:",
							"(?P<new>new file:\\s+.*)",
							"|",
							"(?P<del>deleted:\\s+.*)",
							"|",
							"(?P<mod>modified:\\s+.*)",
							"|",
							"(?P<ren>renamed:\\s+.*)",
						")$"
					],
					"replace_groups": {
						"new,mod": "%Cg%Gc%Cz",
						"del": "%Clr%Gc%Cz",
						"ren": "%Cly%Gc%Cz"
					}
				},
				{
					"activation_expression": "^Changes not staged for commit:$",
                    "activation_expression_line_offset": 1,
					"deactivation_expression": "^\\s*$",
					"expression": [
						"^\\s+(?:",
							"(?P<new>new file:\\s+.*)",
							"|",
							"(?P<del>deleted:\\s+.*)",
							"|",
							"(?P<mod>modified:\\s+.*)",
							"|",
							"(?P<ren>renamed:\\s+.*)",
						")$"
					],
					"replace_groups": {
						"new,del,mod,ren": "%Cr%Gc%Cz"
					}
				},
				{
					"activation_expression": "^Untracked files:$",
					"activation_expression_line_offset": 2,
					"deactivation_expression": "^\\s*$",
					"expression": "^\\s+([^(].*)$",
					"replace_groups": ["%Cr%Gc%Cz"]
				}
			]
		}
	]
}
